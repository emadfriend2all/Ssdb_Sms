@inject Microsoft.Extensions.Localization.IStringLocalizer<NavMenu> _localizer

<PersonCard Style="background-color: var(--mud-palette-table-striped);color: var(--mud-palette-drawer-text); margin-bottom:0px!important" />
<MudDivider Style="color:white;flex-grow: 0;" />
<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home" IconColor="Color.Inherit">@_localizer["Home"]</MudNavLink>
    
    <MudNavLink Href="/todos" Icon="@Icons.Material.Filled.Label" IconColor="Color.Inherit" Class="fsh-nav-child">@_localizer["Todos"]</MudNavLink>
    @if (CanViewAdministrationGroup)
    {
        <MudNavGroup Title="@_localizer["Settings"]" Icon="@Icons.Material.Filled.Settings" IconColor="Color.Inherit" HideExpandIcon>
            @* <MudText Typo="Typo.subtitle2" Color="Color.Surface" Class="ml-4 my-3">@_localizer["Administration"]</MudText> *@
            @if (_canViewUsers)
            {
                <MudNavLink Match="NavLinkMatch.Prefix" Href="/identity/users" IconColor="Color.Inherit" Icon="@Icons.Material.Filled.PeopleAlt">@_localizer["Users"]</MudNavLink>
            }
            @if (_canViewRoles)
            {
                <MudNavLink Href="/identity/roles" Icon="@Icons.Material.Filled.EmojiPeople" IconColor="Color.Inherit">@_localizer["Roles"]</MudNavLink>
            }
            @if (_canViewTenants)
            {
                <MudNavLink Href="/subscribers" Icon="@Icons.Material.Filled.GroupWork" IconColor="Color.Inherit" Disabled="!_canViewTenants">@_localizer["Tenants"]</MudNavLink>
            }
        </MudNavGroup>
    }
    @if (_canViewAuditTrails)
    {
        <MudNavLink Match="NavLinkMatch.Prefix" Href="/identity/audit-trail" Icon="@Icons.Material.Filled.WorkHistory" IconColor="Color.Inherit">@_localizer["Audit Trail"]</MudNavLink>
    }

</MudNavMenu>